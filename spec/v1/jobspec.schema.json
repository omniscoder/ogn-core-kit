{
  "$schema": "http://json-schema.org/draft-07/schema#",
  "$id": "https://github.com/omniscoder/ogn-core-kit/spec/v1/jobspec.schema.json",
  "title": "OGN Job Spec JSON v1",
  "type": "object",
  "additionalProperties": true,
  "required": ["schema_version", "run_id", "tenant_id", "engine", "inputs", "outputs"],
  "properties": {
    "schema_version": { "type": "string", "const": "v1" },
    "run_id": { "type": "string", "minLength": 1 },
    "tenant_id": { "type": "string", "minLength": 1 },
    "submitted_at": { "type": "string", "format": "date-time" },
    "engine": {
      "type": "object",
      "additionalProperties": true,
      "required": ["version", "profile"],
      "properties": {
        "version": { "type": "string", "minLength": 1 },
        "profile": { "type": "string", "minLength": 1 },
        "parameters": { "type": "object", "additionalProperties": true }
      }
    },
    "inputs": {
      "type": "object",
      "additionalProperties": true,
      "required": ["fastq_uris", "reference_uri"],
      "properties": {
        "fastq_uris": {
          "type": "array",
          "minItems": 1,
          "items": { "type": "string", "minLength": 1 }
        },
        "reference_uri": { "type": "string", "minLength": 1 },
        "extra": { "type": "object", "additionalProperties": true }
      }
    },
    "outputs": {
      "type": "object",
      "minProperties": 1,
      "additionalProperties": {
        "type": "object",
        "additionalProperties": true,
        "required": ["uri"],
        "properties": {
          "uri": { "type": "string", "minLength": 1 },
          "put_url": { "type": "string", "minLength": 1 },
          "optional": { "type": "boolean" },
          "media_type": { "type": "string" }
        }
      }
    },
    "control": {
      "type": "object",
      "additionalProperties": true,
      "properties": {
        "cancel_subject": { "type": "string", "minLength": 1 },
        "logs_subject": { "type": "string", "minLength": 1 }
      }
    }
  }
}

